import ttkbootstrap as ttk
from tkinter import Listbox, END, StringVar


class AutocompleteEntry(ttk.Entry):
    def __init__(self, parent, autocomplete_list, textvariable=None, *args, **kwargs):
        # اگر textvariable داده نشد، یک StringVar جدید بساز
        if textvariable is None:
            textvariable = StringVar()
        
        # textvariable را به Entry پاس بده
        super().__init__(parent, textvariable=textvariable, *args, **kwargs)
        
        self.parent = parent
        self.autocomplete_list = autocomplete_list
        self.filtered = []
        self._textvariable = textvariable  # ذخیره reference
        
        self.listbox = None
        
        self.bind("<KeyRelease>", self.on_keyrelease)
        self.bind("<Down>", self.move_down)
        self.bind("<Up>", self.move_up)
        self.bind("<Return>", self.select_item)
        self.bind("<Escape>", self.hide_listbox)


    def on_keyrelease(self, event):
        if event.keysym in ("Up", "Down", "Return", "Escape"):
            return
        
        value = self.get()
        if not value:
            self.hide_listbox()
            return
        
        self.filtered = [
            item for item in self.autocomplete_list
            if item.lower().startswith(value.lower())
        ]
        
        if not self.filtered:
            self.hide_listbox()
            return
        
        self.show_listbox()


    def show_listbox(self):
        if not self.listbox:
            self.listbox = Listbox(
                self.parent,
                height=5,
                activestyle="none"
            )
            self.listbox.bind("<ButtonRelease-1>", self.select_item)
        
        self.listbox.delete(0, END)
        for item in self.filtered:
            self.listbox.insert(END, item)
        
        x = self.winfo_x()
        y = self.winfo_y() + self.winfo_height()
        w = self.winfo_width()
        
        self.listbox.place(x=x, y=y, width=w)
        self.listbox.selection_set(0)


    def hide_listbox(self, event=None):
        if self.listbox:
            self.listbox.destroy()
            self.listbox = None


    def move_down(self, event):
        if self.listbox:
            index = self.listbox.curselection()
            if index and index[0] < self.listbox.size() - 1:
                self.listbox.selection_clear(index)
                self.listbox.selection_set(index[0] + 1)
                self.listbox.activate(index[0] + 1)
        return "break"


    def move_up(self, event):
        if self.listbox:
            index = self.listbox.curselection()
            if index and index[0] > 0:
                self.listbox.selection_clear(index)
                self.listbox.selection_set(index[0] - 1)
                self.listbox.activate(index[0] - 1)
        return "break"


    def select_item(self, event=None):
        if self.listbox:
            index = self.listbox.curselection()
            if index:
                value = self.listbox.get(index)
                self.delete(0, END)
                self.insert(0, value)
            self.hide_listbox()
        return "break"


    def update_list(self, new_list):
        self.autocomplete_list = new_list
    
    
    # متدهای کمکی برای دسترسی به textvariable
    def set_value(self, value):
        """تنظیم مقدار Entry"""
        self._textvariable.set(value)
    
    
    def get_value(self):
        """دریافت مقدار Entry"""
        return self._textvariable.get()
